doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
  body
      body
          nav.navbar.navbar-inverse.navbar-fixed-top
              .container
                  .navbar-header
                      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                          span.sr-only Toggle navigation
                          span.icon-bar
                          span.icon-bar
                          span.icon-bar
                      a.navbar-brand(href='#') PlaceBo
                  #navbar.collapse.navbar-collapse
                      ul.nav.navbar-nav
                          li(class=(title === 'Register Doc' ? 'active' : ''))
                              a(href='/users/registerDoc') Doctor Registration

                          li(class=(title === 'Register User' ? 'active' : ''))
                              a(href='/users/registerUser') User Registration

                          li(class=(title === 'Login Doc' ? 'active' : ''))
                              a(href='/users/loginDoc') Log In Doc

                          li(class=(title === 'Login User' ? 'active' : ''))
                              a(href='/users/loginUser') Log In User

                          li(class=(title === 'Map' ? 'active' : ''))
                              a(href='/users/map') Map

                      ul.nav.navbar-nav.navbar-right
                          li
                              a(href='/users/logout ') Log Out
          .container
            block content

      script(src='https://ajax.googleapis.com/ajax/libs/jquery//1.11.1/jquery.min.js')
      script(src='/javascripts/bootstrap.js')